<%= form_with(model:food, url: url, method: method, class: 'w-50 mx-auto') do |form|%>
    <div class="form-group mb-3">
        <%= form.label :name, class: "form-label mb-2"%>
        <%= form.text_field :name, class: "form-control form-control-lg #{field_error(form.object.errors, :name)}"%>
        <%= render 'shared/form_error_display', errors: form.object.errors, field: :name%>
    </div>

    <div class="form-group mb-3">
        <%= form.label :measurement_unit, class: "form-label mb-2"%>
        <%= form.select :measurement_unit, options_for_select(measurement_units_for_food_select), prompt: "Select an option", class: "#{field_error(form.object.errors, :measurement_unit)}"%>
        <%= render 'shared/form_error_display', errors: form.object.errors, field: :measurement_unit%>
    </div>

    <div class="form-group row mb-3">
        <div class="col">
            <div class="form-group">
                <%= form.label :price, 'Price (per unit)', class: "form-label mb-2" %>
                <%= form.number_field :price, class: "form-control form-control-lg #{field_error(form.object.errors, :price)}"%>
                <%= render 'shared/form_error_display', errors: form.object.errors, field: :price%>
            </div>
        </div>

            <div class="col">
                <div class="form-group">
                    <%= form.label :quantity, class: "form-label mb-2" %>
                    <%= form.number_field :quantity, class: "form-control form-control-lg #{field_error(form.object.errors, :quantity)}"%>
                    <%= render 'shared/form_error_display', errors: form.object.errors, field: :quantity%>
                </div>
        </div>
    </div>

    <div class="form-group mt-4">
        <%= form.submit button_label, class: "btn btn-primary btn-lg btn-block w-100"%>
    </div>
<% end %>