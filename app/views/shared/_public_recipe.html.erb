<div class="recipes-list flex flex-column w-50 mx-auto">
    <%= link_to recipe_path(recipe), class: "card"  do%>
        <div class="card-body d-flex align-items-start gap-5">
                <div>
                    <h4><%= recipe.name %> </h4>
                    <span class="d-block text-muted">By: <%= recipe.user.name %> </span>
                </div>

                <div>
                    <p class="mb-1">Total food items: <%= recipe.foods.length %> </p>
                    <p>Total price: <%= recipe.recipe_foods.any? ? number_to_currency(total_food_price(recipe.recipe_foods)) : 0 %> </p>
                </div>
            </div>
    <% end %>

</div>