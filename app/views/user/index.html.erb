<div class="container">
    <h1 class="text-center display-4">All Recipes</h1>

<% if @recipes.any? %>
    <% @recipes.each do |recipe|%>
        <%= render "shared/public_recipe", recipe: recipe%>
    <%end %>
<% else %>
    <div class="alert alert-info" role="alert">
        No Recipe(s) Available!!!
    </div>
<% end %>
</div>