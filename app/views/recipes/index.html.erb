<div class="text-center my-3">
  <%= link_to "new recipe", new_recipe_path(current_user), class: "btn btn-primary" %>
</div>

<% @recipes.each do |recipe| %>

  <div class="container mx-auto">
    <div class="card mb-3">
      <div class="card-header bg-secondary text-light">
        Recipe
      </div>
      <div class="row g-0">
        <div class="col-md-4 p-2">
          <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
          <span
            class="badge bg-danger fs-5 cursor"
            data-bs-toggle="modal"
            data-bs-target="#confirm"
          >Remove</span>
          <%= render "shared/model_confim", title: recipe.name, path: recipe_path(recipe) %>
        </div>
        <%= link_to recipe_path(recipe), class: "link-card col-md-8 p-2" do %>

          <div class="card-body">
            <p class="card-text"><%= recipe.description %></p>
          </div>

        <% end %>
      </div>
      <div class="card-footer">
        <p class="card-text"><small class="text-muted"><%= time_ago_in_words(recipe.created_at) %>
            ago</small></p>

      </div>
    </div>
  </div>

<% end %>
